    },
    {
      "type": "color",
      "id": "arrow_background",
      "label": "t:settings.arrow_background",
      "default": "rgba(255, 255, 255, 0.9)"
    },
    {
      "type": "color",
      "id": "arrow_color",
      "label": "t:settings.arrow_color",
      "default": "#333333"
    },
