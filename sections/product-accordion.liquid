{% comment %}
  Product Accordion Section
  Displays expandable accordion items for product information like Features, Specifications, Returns, etc.
  Each accordion item can display product metafields or custom content.
{% endcomment %}

{%- liquid
  assign section_id = 'ProductAccordion-' | append: section.id
  assign accordion_class = 'product-accordion'
  
  if section.settings.color_scheme != blank
    assign accordion_class = accordion_class | append: ' color-' | append: section.settings.color_scheme
  endif
-%}

<div
  id="{{ section_id }}"
  class="{{ accordion_class }} section section--{{ section.settings.section_width }}"
  style="
    --accordion-accent-color: {{ section.settings.accent_color }};
    --accordion-accent-width: {{ section.settings.accent_width }}px;
    --accordion-heading-font-size: {{ section.settings.heading_font_size }}px;
    {% render 'spacing-style', settings: section.settings %}
  "
>
  <div class="product-accordion__container page-width">
    {%- if section.settings.section_title != blank -%}
      <h2 class="product-accordion__section-title">{{ section.settings.section_title }}</h2>
    {%- endif -%}

    <div class="product-accordion__items">
      {%- for block in section.blocks -%}
        {%- liquid
          assign accordion_id = 'accordion-' | append: section.id | append: '-' | append: block.id
          assign content_id = 'accordion-content-' | append: section.id | append: '-' | append: block.id
          assign is_expanded = false
          if block.settings.default_open
            assign is_expanded = true
          endif
          
          # Get content based on block type
          assign accordion_content = ''
          
          case block.type
            when 'features'
              if block.settings.metafield_namespace != blank and block.settings.metafield_key != blank
                assign metafield_value = product.metafields[block.settings.metafield_namespace][block.settings.metafield_key].value
                if metafield_value != blank
                  assign accordion_content = metafield_value
                endif
              endif
              if accordion_content == blank and block.settings.custom_content != blank
                assign accordion_content = block.settings.custom_content
              endif
              
            when 'specifications'
              if block.settings.metafield_namespace != blank and block.settings.metafield_key != blank
                assign metafield_value = product.metafields[block.settings.metafield_namespace][block.settings.metafield_key].value
                if metafield_value != blank
                  assign accordion_content = metafield_value
                endif
              endif
              if accordion_content == blank and block.settings.custom_content != blank
                assign accordion_content = block.settings.custom_content
              endif
              
            when 'returns'
              if block.settings.custom_content != blank
                assign accordion_content = block.settings.custom_content
              elsif block.settings.page != blank
                assign accordion_content = block.settings.page.content
              endif
              
            when 'reviews'
              assign accordion_content = block.settings.custom_content
              
            when 'custom'
              if block.settings.metafield_namespace != blank and block.settings.metafield_key != blank
                assign metafield_value = product.metafields[block.settings.metafield_namespace][block.settings.metafield_key].value
                if metafield_value != blank
                  assign accordion_content = metafield_value
                endif
              endif
              if accordion_content == blank and block.settings.custom_content != blank
                assign accordion_content = block.settings.custom_content
              endif
          endcase
        -%}

        {%- if block.settings.title != blank -%}
          <div
            class="product-accordion__item{% if is_expanded %} product-accordion__item--open{% endif %}"
            {{ block.shopify_attributes }}
          >
            <button
              id="{{ accordion_id }}"
              class="product-accordion__header"
              aria-expanded="{{ is_expanded }}"
              aria-controls="{{ content_id }}"
              type="button"
              data-accordion-trigger
            >
              <span class="product-accordion__accent"></span>
              <span class="product-accordion__title">{{ block.settings.title }}</span>
              <span class="product-accordion__icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="accordion-icon" aria-hidden="true">
                  <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </button>
            
            <div
              id="{{ content_id }}"
              class="product-accordion__content"
              role="region"
              aria-labelledby="{{ accordion_id }}"
              {% unless is_expanded %}hidden{% endunless %}
            >
              <div class="product-accordion__content-inner">
                {%- if block.type == 'features' and accordion_content != blank -%}
                  {%- if block.settings.show_as_list -%}
                    <ul class="product-accordion__feature-list">
                      {%- assign features = accordion_content | split: '|' -%}
                      {%- for feature in features -%}
                        {%- assign feature_trimmed = feature | strip -%}
                        {%- if feature_trimmed != blank -%}
                          <li class="product-accordion__feature-item">
                            <svg class="feature-checkmark" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                              <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            <span>{{ feature_trimmed }}</span>
                          </li>
                        {%- endif -%}
                      {%- endfor -%}
                    </ul>
                  {%- else -%}
                    <div class="product-accordion__richtext rte">
                      {{ accordion_content }}
                    </div>
                  {%- endif -%}
                {%- elsif accordion_content != blank -%}
                  <div class="product-accordion__richtext rte">
                    {{ accordion_content }}
                  </div>
                {%- else -%}
                  <p class="product-accordion__empty">{{ 'general.content_unavailable' | t | default: 'Content not available.' }}</p>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .product-accordion {
    width: 100%;
  }

  .product-accordion__container {
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .product-accordion__section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-foreground);
  }

  .product-accordion__items {
    border-top: 1px solid var(--color-border, #e5e5e5);
  }

  .product-accordion__item {
    border-bottom: 1px solid var(--color-border, #e5e5e5);
  }

  .product-accordion__header {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 1.25rem 0;
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    gap: 1rem;
    transition: background-color 0.2s ease;
  }

  .product-accordion__header:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }

  .product-accordion__header:focus-visible {
    outline: 2px solid var(--accordion-accent-color, #0d5257);
    outline-offset: -2px;
  }

  .product-accordion__accent {
    width: var(--accordion-accent-width, 4px);
    height: 1.5em;
    background-color: var(--accordion-accent-color, #0d5257);
    border-radius: 2px;
    flex-shrink: 0;
  }

  .product-accordion__title {
    flex-grow: 1;
    font-size: var(--accordion-heading-font-size, 20px);
    font-weight: 700;
    color: var(--accordion-accent-color, #0d5257);
    line-height: 1.3;
  }

  .product-accordion__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-foreground);
    transition: transform 0.3s ease;
  }

  .product-accordion__header[aria-expanded="true"] .product-accordion__icon {
    transform: rotate(180deg);
  }

  .product-accordion__content {
    overflow: hidden;
    transition: max-height 0.3s ease, opacity 0.3s ease;
  }

  .product-accordion__content[hidden] {
    display: none;
  }

  .product-accordion__content-inner {
    padding: 0 0 1.5rem calc(var(--accordion-accent-width, 4px) + 1rem);
  }

  .product-accordion__feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .product-accordion__feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: var(--color-foreground);
  }

  .feature-checkmark {
    flex-shrink: 0;
    color: var(--accordion-accent-color, #0d5257);
    margin-top: 0.2em;
  }

  .product-accordion__richtext {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-foreground);
  }

  .product-accordion__richtext p {
    margin-bottom: 1rem;
  }

  .product-accordion__richtext p:last-child {
    margin-bottom: 0;
  }

  .product-accordion__empty {
    color: var(--color-foreground-subdued, #666);
    font-style: italic;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .product-accordion__header {
      padding: 1rem 0;
    }

    .product-accordion__title {
      font-size: calc(var(--accordion-heading-font-size, 20px) * 0.85);
    }

    .product-accordion__content-inner {
      padding-left: calc(var(--accordion-accent-width, 4px) + 0.75rem);
    }
  }
</style>

<script>
  (function() {
    const accordionSection = document.getElementById('{{ section_id }}');
    if (!accordionSection) return;

    const triggers = accordionSection.querySelectorAll('[data-accordion-trigger]');

    triggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        const contentId = this.getAttribute('aria-controls');
        const content = document.getElementById(contentId);
        const item = this.closest('.product-accordion__item');

        // Toggle state
        this.setAttribute('aria-expanded', !isExpanded);
        
        if (isExpanded) {
          content.setAttribute('hidden', '');
          item.classList.remove('product-accordion__item--open');
        } else {
          content.removeAttribute('hidden');
          item.classList.add('product-accordion__item--open');
        }
      });

      // Keyboard support
      trigger.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          this.click();
        }
      });
    });
  })();
</script>

